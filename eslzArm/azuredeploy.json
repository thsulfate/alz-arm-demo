{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "PertaminaThreeTiersPlanName": {
      "type": "string",
      "minLength": 1
    },
    "PertaminaThreeTiersPlanSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "ptmdbserverAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "ptmdbserverAdminLoginPassword": {
      "type": "securestring"
    },
    "ptmappdbName": {
      "type": "string",
      "minLength": 1
    },
    "ptmappdbCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "ptmappdbEdition": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "ptmappdbRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    }},
  "variables": {
    "ptmappfeName": "[concat('ptmappfe')]",
    "ptmappbeName": "[concat('ptmappbe')]",
    "ptmdbserverName": "[concat('ptmdbserver')]"},
  "resources": [
    {
      "name": "[parameters('PertaminaThreeTiersPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('PertaminaThreeTiersPlanSkuName')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "PertaminaThreeTiersPlan"
      },
      "properties": {
        "name": "[parameters('PertaminaThreeTiersPlanName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[variables('ptmappfeName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('PertaminaThreeTiersPlanName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('PertaminaThreeTiersPlanName')))]": "Resource",
        "displayName": "ptmappfe"
      },
      "properties": {
        "name": "[variables('ptmappfeName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('PertaminaThreeTiersPlanName'))]"
      }
    },
    {
      "name": "[variables('ptmappbeName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('PertaminaThreeTiersPlanName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('PertaminaThreeTiersPlanName')))]": "Resource",
        "displayName": "ptmappbe"
      },
      "properties": {
        "name": "[variables('ptmappbeName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('PertaminaThreeTiersPlanName'))]"
      }
    },
    {
      "name": "[variables('ptmdbserverName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "ptmdbserver"
      },
      "properties": {
        "administratorLogin": "[parameters('ptmdbserverAdminLogin')]",
        "administratorLoginPassword": "[parameters('ptmdbserverAdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('ptmdbserverName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[parameters('ptmappdbName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('ptmdbserverName'))]"
          ],
          "tags": {
            "displayName": "ptmappdb"
          },
          "properties": {
            "collation": "[parameters('ptmappdbCollation')]",
            "edition": "[parameters('ptmappdbEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('ptmappdbRequestedServiceObjectiveName')]"
          }
        }
      ]
    }],
  "outputs": {}
}
